---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import CTA from '../../components/CTA.astro';
import { getBreadcrumbSchema } from '../../utils/schema';
import { flooringTypes } from '../../config/flooring';

const breadcrumbs = [
  { label: 'Home', url: '/' },
  { label: 'Flooring Types', url: '/flooring/' },
];

const schema = [getBreadcrumbSchema(breadcrumbs)];
---

<BaseLayout
  title="Commercial Flooring Types | LVT, Vinyl, Tile, Hardwood & More"
  description="Commercial flooring types: LVT/LVP, sheet vinyl, VCT, hardwood, engineered hardwood, rubber, tile, carpet, and carpet tile. Professional installation available."
  schema={schema}
>
  
  <main id="main-content" class="pt-24">
    <section class="px-4 md:px-15 py-16 bg-charcoal text-white">
      <div class="max-w-7xl mx-auto">
        <Breadcrumbs items={breadcrumbs} />
        <h1 class="text-5xl md:text-6xl font-heading font-extrabold mb-6">Commercial Flooring Types</h1>
        <p class="text-xl text-gray-mid max-w-3xl">
          We install LVT/LVP, sheet vinyl, VCT, hardwood, engineered hardwood, rubber, tile (ceramic and porcelain), carpet, and carpet tile. We help you choose the right flooring for your space and provide turnkey installation.
        </p>
      </div>
    </section>
    
    <section class="px-4 md:px-15 py-20">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" data-reveal-children>
          {flooringTypes.map((flooring) => (
            <a
              href={`/flooring/${flooring.slug}/`}
              class="block relative p-8 border border-gray-200 hover:border-ochre transition-all no-underline text-white bg-white overflow-hidden group min-h-[240px] md:min-h-[280px]"
            >
              <div
                class="absolute inset-0 bg-cover bg-center transition-transform group-hover:scale-105"
                style={`background-image: url('${flooring.image}');`}
              ></div>
              <div class="absolute inset-0 bg-charcoal/60 group-hover:bg-charcoal/70 transition-colors"></div>
              <div class="relative z-10 h-full flex flex-col justify-end">
                <div>
                  <h2 class="text-2xl font-heading font-bold mb-2">{flooring.title}</h2>
                  <p class="text-sm text-gray-200">{flooring.description}</p>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
    
    <section class="px-4 md:px-15 py-20 bg-gray-light">
      <div class="max-w-4xl mx-auto text-center" data-reveal>
        <h2 class="text-4xl font-heading font-bold mb-6">Not Sure Which Flooring to Choose?</h2>
        <p class="text-xl text-gray-dark mb-8">
          Contact us for a free consultation. We'll help you select the right flooring for your space and provide a detailed proposal.
        </p>
        <CTA />
      </div>
    </section>
  </main>
  
</BaseLayout>
