---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import CTA from '../../components/CTA.astro';
import { getBreadcrumbSchema } from '../../utils/schema';

const breadcrumbs = [
  { label: 'Home', url: '/' },
  { label: 'Industries', url: '/industries/' },
];

const schema = [getBreadcrumbSchema(breadcrumbs)];

const industries = [
  {
    title: 'Property Management',
    slug: 'property-management',
    description: 'Turnkey flooring solutions for property managers.',
    image: 'https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?w=800&q=80',
  },
  {
    title: 'Office Buildings',
    slug: 'office-buildings',
    description: 'After-hours installations for occupied offices.',
    image: 'https://images.unsplash.com/photo-1497366216548-37526070297c?w=800&q=80',
  },
  {
    title: 'Healthcare',
    slug: 'healthcare',
    description: 'Hygienic, durable flooring for medical facilities.',
    image: 'https://images.unsplash.com/photo-1519494026892-80bbd2d6fd0d?w=800&q=80',
  },
  {
    title: 'Education',
    slug: 'education',
    description: 'School and university flooring projects.',
    image: 'https://images.unsplash.com/photo-1503676260728-1c00da094a0b?w=800&q=80',
  },
  {
    title: 'Hospitality',
    slug: 'hospitality',
    description: 'Hotels, restaurants, and hospitality spaces.',
    image: 'https://images.unsplash.com/photo-1551882547-ff40c63fe5fa?w=800&q=80',
  },
  {
    title: 'Retail',
    slug: 'retail',
    description: 'Durable flooring for retail environments.',
    image: 'https://images.unsplash.com/photo-1441986300917-64674bd600d8?w=800&q=80',
  },
  {
    title: 'Gyms & Fitness',
    slug: 'gyms-fitness',
    description: 'Specialized flooring for fitness facilities.',
    image: 'https://images.unsplash.com/photo-1534438327276-14e5300c3a48?w=800&q=80',
  },
  {
    title: 'Residential',
    slug: 'residential',
    description: 'High-quality flooring for homes and multi-family units.',
    image: '/images/hardwood4.jpg',
    href: '/residential/',
  },
  {
    title: 'Golf Courses & Banquet Halls',
    slug: 'golf-courses-banquet-halls',
    description: 'Elegant, durable flooring for clubhouses and event spaces.',
    image: '/images/tile-images-hospitality.jpeg',
  },
];
---

<BaseLayout
  title="Commercial Flooring by Industry | Healthcare, Office, Retail & More"
  description="Commercial flooring services for property management, offices, healthcare, education, hospitality, retail, and fitness facilities."
  schema={schema}
>
  
  <main id="main-content" class="pt-24">
    <section class="px-4 md:px-15 py-16 bg-charcoal text-white">
      <div class="max-w-7xl mx-auto">
        <Breadcrumbs items={breadcrumbs} />
        <h1 class="text-5xl md:text-6xl font-heading font-extrabold mb-6">Industries We Serve</h1>
        <p class="text-xl text-gray-mid max-w-3xl">
          Commercial flooring solutions tailored to the unique needs of different industries. We understand the challenges and requirements of each sector.
        </p>
      </div>
    </section>
    
    <section class="px-4 md:px-15 py-20">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" data-reveal-children>
          {industries.map((industry) => (
            <a
              href={(industry as any).href || `/industries/${industry.slug}/`}
              class="block relative p-8 border border-gray-mid hover:border-black transition-all no-underline text-white bg-white overflow-hidden group min-h-[280px]"
            >
              <div 
                class="absolute inset-0 bg-cover bg-center transition-transform group-hover:scale-105"
                style={`background-image: url('${industry.image}');`}
              ></div>
              <div class="absolute inset-0 bg-black/60 group-hover:bg-black/70 transition-colors"></div>
              <div class="relative z-10 h-full flex flex-col justify-between">
                <div>
                  <h2 class="text-2xl font-bold mb-4">{industry.title}</h2>
                  <p class="text-gray-200 mb-4">{industry.description}</p>
                </div>
                <span class="text-sm font-semibold uppercase tracking-wide inline-block">Learn More â†’</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
    
    <section class="px-4 md:px-15 py-20 bg-gray-light">
      <div class="max-w-4xl mx-auto text-center" data-reveal>
        <h2 class="text-4xl font-heading font-bold mb-6">Ready to Get Started?</h2>
        <p class="text-xl text-gray-dark mb-8">
          Contact us for a free site walk and detailed proposal for your commercial flooring project.
        </p>
        <CTA />
      </div>
    </section>
  </main>
  
</BaseLayout>
