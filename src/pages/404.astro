---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTA from '../components/CTA.astro';
---

<BaseLayout
  title="Page Not Found | Fenix Flooring"
  description="The page you're looking for doesn't exist."
  noindex={true}
>
  <main id="main-content" class="pt-24">
    <section class="px-4 md:px-15 py-20">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-heading font-extrabold mb-6">404 - Page Not Found</h1>
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          The page you're looking for doesn't exist or has been moved.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <CTA href="/" text="Go Home" />
          <CTA href="/contact/" text="Contact Us" primary={false} />
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
