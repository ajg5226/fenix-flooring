---
import { siteConfig } from '../config/site';

const linkedInFooterUrl = 'https://www.fenixflooring.com/go/linkedin/?utm_source=website&utm_medium=owned&utm_campaign=social_profile_click&utm_content=footer';
const hasSocialLinks = siteConfig.social.facebook || linkedInFooterUrl || siteConfig.social.instagram;
---

<footer class="bg-charcoal text-white py-20 px-4 md:px-15 text-center">
  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col items-center gap-2 mb-10">
      <img
        src="/logos/logo-white.svg"
        alt="Fenix Flooring"
        class="h-16 w-auto"
        width="240"
        height="64"
      />
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12 text-left">
      <div>
        <h3 class="text-lg font-heading font-semibold mb-4 uppercase tracking-wide">Quick Links</h3>
        <ul class="space-y-2 list-none p-0">
          <li><a href="/services/" class="text-gray-300 no-underline hover:text-ochre transition-colors">Services</a></li>
          <li><a href="/flooring/" class="text-gray-300 no-underline hover:text-ochre transition-colors">Flooring Types</a></li>
          <li><a href="/industries/" class="text-gray-300 no-underline hover:text-ochre transition-colors">Industries</a></li>
          <li><a href="/residential/" class="text-gray-300 no-underline hover:text-ochre transition-colors">Residential</a></li>
          <li><a href="/resources/" class="text-gray-300 no-underline hover:text-ochre transition-colors">Resources</a></li>
          <li><a href="/case-studies/" class="text-gray-300 no-underline hover:text-ochre transition-colors">Case Studies</a></li>
          <li><a href="/about/" class="text-gray-300 no-underline hover:text-ochre transition-colors">About</a></li>
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-heading font-semibold mb-4 uppercase tracking-wide">Residential</h3>
        <ul class="space-y-2 list-none p-0">
          <li><a href="/residential/lvt-lvp/" class="text-gray-300 no-underline hover:text-ochre transition-colors">LVT/LVP</a></li>
          <li><a href="/residential/engineered-hardwood/" class="text-gray-300 no-underline hover:text-ochre transition-colors">Hardwood / Engineered Hardwood</a></li>
          <li><a href="/residential/carpet/" class="text-gray-300 no-underline hover:text-ochre transition-colors">Carpet</a></li>
          <li><a href="/residential/tile/" class="text-gray-300 no-underline hover:text-ochre transition-colors">Tile</a></li>
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-heading font-semibold mb-4 uppercase tracking-wide">Services</h3>
        <ul class="space-y-2 list-none p-0">
          <li><a href="/services/commercial-flooring-installation/" class="text-gray-300 no-underline hover:text-ochre transition-colors">Installation</a></li>
          <li><a href="/services/commercial-flooring-replacement/" class="text-gray-300 no-underline hover:text-ochre transition-colors">Replacement</a></li>
          <li><a href="/services/flooring-removal-demolition/" class="text-gray-300 no-underline hover:text-ochre transition-colors">Removal & Demo</a></li>
          <li><a href="/services/concrete-prep-leveling/" class="text-gray-300 no-underline hover:text-ochre transition-colors">Concrete Prep</a></li>
          <li><a href="/services/moisture-mitigation/" class="text-gray-300 no-underline hover:text-ochre transition-colors">Moisture Mitigation</a></li>
          <li><a href="/services/after-hours-occupied-installation/" class="text-gray-300 no-underline hover:text-ochre transition-colors">After-Hours Install</a></li>
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-heading font-semibold mb-4 uppercase tracking-wide">Contact</h3>
        <p class="text-gray-300 mb-2">
          <a href={`tel:${siteConfig.phone.replace(/\D/g, '')}`} class="text-gray-300 no-underline hover:text-ochre transition-colors">
            {siteConfig.phone}
          </a>
        </p>
        <p class="text-gray-300 mb-2">
          <a href={`mailto:${siteConfig.email}`} class="text-gray-300 no-underline hover:text-ochre transition-colors">
            {siteConfig.email}
          </a>
        </p>
        <p class="text-gray-300 mb-2">
          {siteConfig.address.street}, {siteConfig.address.city}, {siteConfig.address.state} {siteConfig.address.zip}
        </p>
        <div class="mt-4">
          <p class="text-gray-300 text-sm uppercase tracking-wide">Service Area</p>
          <p class="text-gray-400 text-sm">{siteConfig.serviceAreaShort}</p>
        </div>

        <!-- Social Media Links -->
        {hasSocialLinks && (
          <div class="mt-6">
            <h3 class="text-lg font-heading font-semibold mb-4 uppercase tracking-wide">Follow Us</h3>
            <div class="flex gap-4">
              {siteConfig.social.facebook && (
                <a href={siteConfig.social.facebook} target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-ochre transition-colors" aria-label="Facebook">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </a>
              )}
              {linkedInFooterUrl && (
                <a href={linkedInFooterUrl} target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-ochre transition-colors" aria-label="LinkedIn">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              )}
              {siteConfig.social.instagram && (
                <a href={siteConfig.social.instagram} target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-ochre transition-colors" aria-label="Instagram">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                </a>
              )}
            </div>
          </div>
        )}
      </div>
    </div>

    <div class="pt-8 border-t border-gray-700">
      <p class="text-gray-400 text-sm mb-2">
        Â© {new Date().getFullYear()} {siteConfig.businessName}. All rights reserved.
      </p>
      <p class="text-gray-400 text-sm">
        <a href="/privacy/" class="text-gray-400 no-underline hover:text-ochre transition-colors">Privacy Policy</a>
      </p>
    </div>
  </div>
</footer>
