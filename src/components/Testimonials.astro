---
interface Testimonial {
  name: string;
  company?: string;
  rating: number;
  text: string;
  projectType?: string;
}

interface Props {
  testimonials: Testimonial[];
  class?: string;
}

const { testimonials, class: className = '' } = Astro.props;
---

<div class={`space-y-8 ${className}`}>
  {testimonials.map((testimonial) => (
    <div class="bg-white border border-gray-200 p-6 md:p-8">
      <div class="flex items-center gap-1 mb-4">
        {Array.from({ length: 5 }).map((_, i) => (
          <svg
            class={`w-5 h-5 ${i < testimonial.rating ? 'text-ochre' : 'text-gray-200'}`}
            fill="currentColor"
            viewBox="0 0 20 20"
            aria-hidden="true"
          >
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))}
      </div>
      <p class="text-gray-600 mb-4 leading-relaxed text-lg">"{testimonial.text}"</p>
      <div>
        <p class="font-heading font-semibold text-charcoal">{testimonial.name}</p>
        {testimonial.company && (
          <p class="text-sm text-gray-600">{testimonial.company}</p>
        )}
        {testimonial.projectType && (
          <p class="text-sm text-gray-600 mt-1">{testimonial.projectType}</p>
        )}
      </div>
    </div>
  ))}
</div>
