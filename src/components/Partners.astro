---
interface Partner {
  name: string;
  logo: string;
  url?: string;
}

interface Props {
  partners: Partner[];
  class?: string;
}

const { partners, class: className = '' } = Astro.props;
---

<div class={`grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 items-center ${className}`}>
  {partners.map((partner) => {
    const content = (
      <div class="flex items-center justify-center p-6 bg-white border border-gray-200 hover:border-ochre transition-colors">
        <img
          src={partner.logo}
          alt={`${partner.name} logo`}
          class="max-w-full max-h-16 object-contain opacity-70 hover:opacity-100 transition-opacity"
          loading="lazy"
        />
      </div>
    );

    return partner.url ? (
      <a href={partner.url} target="_blank" rel="noopener noreferrer" class="no-underline">
        {content}
      </a>
    ) : (
      content
    );
  })}
</div>
