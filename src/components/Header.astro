---
import { siteConfig } from '../config/site';

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 bg-white border-b border-gray-200 z-50">
  <nav class="px-4 md:px-15 py-4 md:py-5">
    <!-- Desktop Navigation -->
    <div class="hidden lg:flex justify-between items-center">
      <a href="/" class="flex items-center no-underline">
        <img
          src="/logos/logo-color.svg"
          alt="Fenix Flooring"
          class="h-12 md:h-14 w-auto"
          width="200"
          height="56"
        />
      </a>

      <ul class="flex items-center gap-6 md:gap-10 list-none m-0 p-0">
        <li><a href="/services/" class={`text-sm font-medium tracking-wide uppercase no-underline text-charcoal transition-colors hover:text-ochre py-2 ${currentPath.startsWith('/services') ? 'text-ochre' : ''}`}>Services</a></li>
        <li><a href="/flooring/" class={`text-sm font-medium tracking-wide uppercase no-underline text-charcoal transition-colors hover:text-ochre py-2 ${currentPath.startsWith('/flooring') ? 'text-ochre' : ''}`}>Flooring Types</a></li>
        <li><a href="/industries/" class={`text-sm font-medium tracking-wide uppercase no-underline text-charcoal transition-colors hover:text-ochre py-2 ${currentPath.startsWith('/industries') ? 'text-ochre' : ''}`}>Industries</a></li>
        <li><a href="/residential/" class={`text-sm font-medium tracking-wide uppercase no-underline text-charcoal transition-colors hover:text-ochre py-2 ${currentPath.startsWith('/residential') ? 'text-ochre' : ''}`}>Residential</a></li>
        <li><a href="/resources/" class={`text-sm font-medium tracking-wide uppercase no-underline text-charcoal transition-colors hover:text-ochre py-2 ${currentPath.startsWith('/resources') ? 'text-ochre' : ''}`}>Resources</a></li>
        <li><a href="/case-studies/" class={`text-sm font-medium tracking-wide uppercase no-underline text-charcoal transition-colors hover:text-ochre py-2 ${currentPath.startsWith('/case-studies') ? 'text-ochre' : ''}`}>Case Studies</a></li>
        <li><a href="/about/" class={`text-sm font-medium tracking-wide uppercase no-underline text-charcoal transition-colors hover:text-ochre py-2 ${currentPath.startsWith('/about') ? 'text-ochre' : ''}`}>About</a></li>
        <li><a href="/contact/" class={`text-sm font-medium tracking-wide uppercase no-underline text-charcoal transition-colors hover:text-ochre py-2 ${currentPath.startsWith('/contact') ? 'text-ochre' : ''}`}>Contact</a></li>
        <li>
          <a href="/contact/#quote-form" class="inline-block px-6 py-3 bg-terracotta text-white no-underline font-heading font-semibold text-sm tracking-wide uppercase transition-all hover:bg-charcoal hover:scale-105 min-h-[44px] flex items-center">
            Request Quote
          </a>
        </li>
      </ul>
    </div>

    <!-- Mobile Navigation -->
    <div class="lg:hidden flex justify-between items-center">
      <a href="/" class="flex items-center no-underline">
        <img
          src="/logos/logo-color.svg"
          alt="Fenix Flooring"
          class="h-8 w-auto"
          width="140"
          height="32"
        />
      </a>

      <div class="flex items-center gap-3">
        <a href={`tel:${siteConfig.phone.replace(/\D/g, '')}`} class="inline-block px-4 py-1.5 min-w-[120px] bg-terracotta text-white no-underline font-heading font-semibold text-xs tracking-wide uppercase transition-all hover:bg-charcoal hover:scale-105 min-h-[36px] flex items-center justify-center">
          Call
        </a>
        <button
          id="mobile-menu-toggle"
          type="button"
          aria-label="Toggle menu"
          aria-expanded="false"
          class="p-2 text-charcoal focus:outline-none focus:ring-2 focus:ring-ochre focus:ring-offset-2 min-w-[44px] min-h-[44px] flex items-center justify-center"
        >
          <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu Dropdown -->
    <div id="mobile-menu" class="mobile-nav-menu lg:hidden absolute top-full left-0 right-0 bg-white border-b border-gray-200 shadow-lg">
      <ul class="flex flex-col list-none m-0 p-0">
        <li><a href="/services/" class={`block px-4 py-4 text-sm font-medium tracking-wide uppercase no-underline text-charcoal border-b border-gray-200 min-h-[44px] flex items-center hover:text-ochre ${currentPath.startsWith('/services') ? 'bg-gray-100 text-ochre' : ''}`}>Services</a></li>
        <li><a href="/flooring/" class={`block px-4 py-4 text-sm font-medium tracking-wide uppercase no-underline text-charcoal border-b border-gray-200 min-h-[44px] flex items-center hover:text-ochre ${currentPath.startsWith('/flooring') ? 'bg-gray-100 text-ochre' : ''}`}>Flooring Types</a></li>
        <li><a href="/industries/" class={`block px-4 py-4 text-sm font-medium tracking-wide uppercase no-underline text-charcoal border-b border-gray-200 min-h-[44px] flex items-center hover:text-ochre ${currentPath.startsWith('/industries') ? 'bg-gray-100 text-ochre' : ''}`}>Industries</a></li>
        <li><a href="/residential/" class={`block px-4 py-4 text-sm font-medium tracking-wide uppercase no-underline text-charcoal border-b border-gray-200 min-h-[44px] flex items-center hover:text-ochre ${currentPath.startsWith('/residential') ? 'bg-gray-100 text-ochre' : ''}`}>Residential</a></li>
        <li><a href="/resources/" class={`block px-4 py-4 text-sm font-medium tracking-wide uppercase no-underline text-charcoal border-b border-gray-200 min-h-[44px] flex items-center hover:text-ochre ${currentPath.startsWith('/resources') ? 'bg-gray-100 text-ochre' : ''}`}>Resources</a></li>
        <li><a href="/case-studies/" class={`block px-4 py-4 text-sm font-medium tracking-wide uppercase no-underline text-charcoal border-b border-gray-200 min-h-[44px] flex items-center hover:text-ochre ${currentPath.startsWith('/case-studies') ? 'bg-gray-100 text-ochre' : ''}`}>Case Studies</a></li>
        <li><a href="/about/" class={`block px-4 py-4 text-sm font-medium tracking-wide uppercase no-underline text-charcoal border-b border-gray-200 min-h-[44px] flex items-center hover:text-ochre ${currentPath.startsWith('/about') ? 'bg-gray-100 text-ochre' : ''}`}>About</a></li>
        <li><a href="/contact/" class={`block px-4 py-4 text-sm font-medium tracking-wide uppercase no-underline text-charcoal border-b border-gray-200 min-h-[44px] flex items-center hover:text-ochre ${currentPath.startsWith('/contact') ? 'bg-gray-100 text-ochre' : ''}`}>Contact</a></li>
        <li>
          <a href="/contact/#quote-form" class="block px-4 py-4 bg-terracotta text-white no-underline font-heading font-semibold text-sm tracking-wide uppercase min-h-[44px] flex items-center hover:bg-charcoal">
            Request Quote
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<script>
  const menuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  if (menuToggle && mobileMenu) {
    let isOpen = false;

    menuToggle.addEventListener('click', () => {
      if (isOpen) {
        // Close
        mobileMenu.style.maxHeight = '0';
        menuIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
        menuToggle.setAttribute('aria-expanded', 'false');
      } else {
        // Open
        mobileMenu.style.maxHeight = mobileMenu.scrollHeight + 'px';
        menuIcon.classList.add('hidden');
        closeIcon.classList.remove('hidden');
        menuToggle.setAttribute('aria-expanded', 'true');
      }
      isOpen = !isOpen;
    });

    // Close menu when clicking a link
    mobileMenu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.style.maxHeight = '0';
        menuIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
        menuToggle.setAttribute('aria-expanded', 'false');
        isOpen = false;
      });
    });
  }
</script>
