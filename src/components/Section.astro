---
interface Props {
  id?: string;
  background?: 'white' | 'light' | 'dark';
  class?: string;
  padding?: 'sm' | 'md' | 'lg';
}

const {
  id,
  background = 'white',
  class: className = '',
  padding = 'lg',
} = Astro.props;

const bgStyles = {
  white: 'bg-white',
  light: 'bg-gray-100',
  dark: 'bg-charcoal text-white',
};

const paddingStyles = {
  sm: 'py-8 md:py-12',
  md: 'py-12 md:py-16',
  lg: 'py-16 md:py-20',
};
---

<section
  id={id}
  class:list={['px-4 md:px-15', paddingStyles[padding], bgStyles[background], className]}
>
  <div class="max-w-7xl mx-auto">
    <slot />
  </div>
</section>
